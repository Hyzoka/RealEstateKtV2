<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="120dp"
                android:height="120dp"/>

            <corners android:radius="144dp" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">

            <solid android:color="@color/black" />


            <corners android:radius="144dp" />

        </shape>
    </item>
</layer-list>